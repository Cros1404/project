    CREATE DATABASE distancelearning;

    GRANT ALL ON distancelearning.* TO 'webuser'@'localhost' IDENTIFIED BY 'webpass';
    USE distancelearning;

    CREATE TABLE user(
    username VARCHAR(30) PRIMARY KEY,
    password VARCHAR(30),
    teacher BOOLEAN
    ) Engine=InnoDB;

    INSERT INTO user(username, password, teacher) VALUES('user','test', FALSE);
    INSERT INTO user(username, password, teacher) VALUES('teacher','test', TRUE);

    CREATE TABLE course(
    courseName VARCHAR(30) PRIMARY KEY
    ) Engine=InnoDB;

    INSERT INTO course(courseName) VALUES('Math');

    CREATE TABLE lesson(
        ID int NOT NULL AUTO_INCREMENT,
        courseName VARCHAR(30),
        lessonName VARCHAR(30),
        videoURL VARCHAR(2083),
        PRIMARY KEY (ID),
        FOREIGN KEY (courseName) REFERENCES course(courseName)
            ON DELETE CASCADE
            ON UPDATE CASCADE 
    ) Engine=InnoDB;

    INSERT INTO lesson(courseName, lessonName, videoURL) VALUES('Math', 'Lesson 1', 'https://www.youtube.com/embed/vN2jAio0djg');
    INSERT INTO lesson(courseName, lessonName, videoURL) VALUES('Math', 'Lesson 2', 'https://www.youtube.com/embed/vN2jAio0djg');
    INSERT INTO lesson(courseName, lessonName, videoURL) VALUES('Math', 'Hello', 'https://www.youtube.com/embed/vN2jAio0djg');


    CREATE TABLE exercise(
        ID int NOT NULL AUTO_INCREMENT,
        courseName VARCHAR(30),
        lessonID int,
        URL VARCHAR(2083),
        PRIMARY KEY (ID),
        FOREIGN KEY (lessonID) REFERENCES lesson(ID)
            ON DELETE CASCADE
            ON UPDATE CASCADE
    ) Engine=InnoDB;

    INSERT INTO exercise(courseName, lessonID, URL) VALUES('Math', 1, 'http://yle.fi/');
    INSERT INTO exercise(courseName, lessonID, URL) VALUES('Math', 1, 'http://yle.fi/');

    CREATE TABLE material(
        ID int NOT NULL AUTO_INCREMENT,
        lessonID int,
        materialName VARCHAR(30),
        URL VARCHAR(2083),
        PRIMARY KEY (ID),
        FOREIGN KEY (lessonID) REFERENCES lesson(ID)
            ON DELETE CASCADE
            ON UPDATE CASCADE
    ) Engine=InnoDB;

    INSERT INTO material(materialName, lessonID, URL) VALUES('Physics Book Edition 3', 1, 'http://yle.fi/');
    INSERT INTO material(materialName, lessonID, URL) VALUES('Math on wikipedia', 1, 'http://yle.fi/');

    CREATE TABLE extraMaterial(
        ID int NOT NULL AUTO_INCREMENT,
        courseName VARCHAR(30),
        materialName VARCHAR(30),
        URL VARCHAR(2083),
        PRIMARY KEY (ID),
        FOREIGN KEY (courseName) REFERENCES course(courseName)
            ON DELETE CASCADE
            ON UPDATE CASCADE 
    ) Engine=InnoDB;

    CREATE TABLE livestream(
        ID int NOT NULL AUTO_INCREMENT,
        courseName VARCHAR(30),
        URL VARCHAR(2083),
        PRIMARY KEY (ID),
        FOREIGN KEY (courseName) REFERENCES course(courseName)
            ON DELETE CASCADE
            ON UPDATE CASCADE 
    ) Engine=InnoDB;