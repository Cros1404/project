    CREATE DATABASE distancelearning;

    GRANT ALL ON distancelearning.* TO 'webuser'@'localhost' IDENTIFIED BY 'webpass';
    USE distancelearning;

    CREATE TABLE user(
    username VARCHAR(30) PRIMARY KEY,
    password VARCHAR(30),
    teacher BOOLEAN
    ) Engine=InnoDB;

    INSERT INTO user(username, password, teacher) VALUES('user','test', FALSE);
    INSERT INTO user(username, password, teacher) VALUES('teacher','test', TRUE);

    CREATE TABLE course(
    courseName VARCHAR(30) PRIMARY KEY
    ) Engine=InnoDB;

    INSERT INTO course(courseName) VALUES('Math');

    CREATE TABLE lesson(
        ID int NOT NULL AUTO_INCREMENT,
        courseName VARCHAR(30),
        lessonIndex int,
        lessonName VARCHAR(30),
        videoURL VARCHAR(2083),
        PRIMARY KEY (ID),
        FOREIGN KEY (courseName) REFERENCES course(courseName)
            ON DELETE CASCADE
            ON UPDATE CASCADE 
    ) Engine=InnoDB;

    INSERT INTO lesson(courseName, lessonIndex, lessonName, videoURL) VALUES('Math', 1, 'Lesson 1', 'https://www.youtube.com/embed/vN2jAio0djg');
    INSERT INTO lesson(courseName, lessonIndex, lessonName, videoURL) VALUES('Math', 2, 'Lesson 2', 'https://www.youtube.com/embed/vN2jAio0djg');
    INSERT INTO lesson(courseName, lessonIndex, lessonName, videoURL) VALUES('Math', 3, 'Hello', 'https://www.youtube.com/embed/vN2jAio0djg');


    CREATE TABLE lesson(
        ID int NOT NULL AUTO_INCREMENT,
        courseName VARCHAR(30),
        lessonIndex int,
        lessonName VARCHAR(30),
        videoURL VARCHAR(2083),
        PRIMARY KEY (ID),
        FOREIGN KEY (courseName) REFERENCES course(courseName)
            ON DELETE CASCADE
            ON UPDATE CASCADE 
    ) Engine=InnoDB;